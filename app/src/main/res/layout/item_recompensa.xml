<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="1dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/miniatura_recompensa"
        android:layout_width="match_parent"
        android:layout_height="80sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:orientation="vertical"
        android:padding="@dimen/espacio_norma_1">

        <TextView
            android:id="@+id/tv_nombre_recompensa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/recompensa"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead.Inverse"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/tv_des_recompensa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/des_recompensa"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead.Inverse"
            android:textSize="12sp" />

    </LinearLayout>
</LinearLayout>